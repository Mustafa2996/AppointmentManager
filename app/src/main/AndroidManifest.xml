<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.all.appointmentmanager">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CalendarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <activity
            android:name=".CreateAppointmentActivity" />

        <activity android:name=".DeleteAppointmentActivity" />

        <activity android:name=".ViewEditAppointmentActivity" />

        <activity android:name=".EditAppointmentActivity" />

        <activity android:name=".MoveAppointmentActivity" />

        <activity android:name=".ListActivity" />
    </application>

</manifest>